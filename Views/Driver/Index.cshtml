@model IEnumerable<Busero.Models.Driver>

@{
    ViewData["Title"] = "Index";
}

<h1>Tabla de Motoristas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Motorista</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Licencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Licencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DriverId" class="btn btn-success">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.DriverId" class="btn btn-primary">Detalles</a> 
                <a asp-action="Delete" asp-route-id="@item.DriverId" class="btn btn-danger">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
